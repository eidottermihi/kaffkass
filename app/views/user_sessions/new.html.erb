<%= render "shared/error_messages", :target => @user_session %>

<%= form_for @user_session do |f| %>
    <%= field_set_tag "Anmeldung" do %>
      <%= f.label :email, "E-Mail" %><%= f.text_field :email %><br />
      <%= f.label :password, "Passwort" %><%= f.password_field :password %><br />
      <br />
      <%= f.check_box :remember_me%><%= f.label :remember_me, "Dauerhaft anmelden" %><br />
      <%= f.submit "Login" %>
    <% end %>
<% end %>