<%= render "shared/error_messages", :target => @coffee_box %>
<%= form_for @coffee_box do |f| %>
    <p>
      <%= f.label :location, "Location"%>
      <%= f.text_field :location  %>
    </p>
    <p>
      <%= f.label :time, "Uhrzeit" %>
      <%= f.time_select :time%>
    </p>
    <p>
      <%= f.label :description, "Beschreibung" %>
      <%= f.text_area :description %>
    </p>
    <%= f.submit %>
<% end %>