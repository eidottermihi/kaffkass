<% @title = "Kaffeerunde suchen" %>
<h2>Kaffeerunden</h2>
<% if @coffee_boxes.size > 0 %>
    <table id="ktable">
      <thead>
      <tr>
        <th>ID</th>
        <th>Location</th>
        <th>Uhrzeit</th>
        <th>Verwalter</th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% count = 0 %>
      <% @coffee_boxes.each do |coffee_box| %>
          <% if count.even? %>
            <tr>
          <% else %>
            <tr class="alt">
          <% end %>
          <% count += 1 %>
            <td><%= coffee_box.id %></td>
            <td><%= coffee_box.location %></td>
            <td><%= coffee_box.time %></td>
            <td>
              <%= coffee_box.admin.lastname %>, <%= coffee_box.admin.firstname %>
            </td>
            <td>
              <%= link_to "anzeigen", coffee_box_path(coffee_box)%>
              <% if can? :update, coffee_box   %>
                <%= link_to "bearbeiten", edit_coffee_box_path(coffee_box) %>
              <% end %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <p>Nicht f√ºndig geworden? Starte doch eine <%= link_to "eigene Kaffeerunde", new_coffee_box_path %>!</p>
<% else %>
    <p>
      Keine Kaffeerunden vorhanden.<br/>
      Starte doch eine <%= link_to "eigene Kaffeerunde", new_coffee_box_path %>!
    </p>

<% end %>


